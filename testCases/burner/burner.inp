  interblock            100  100   30   60    0    1  1000
  characteristic          0    0    0   60    0    1     6
  viscousWall           100  100    0   30    0    1     1
# j-surfaces
  slipWall                0  100    0    0    0    1     4
  slipWall                0  100   60   60    0    1     3
# k-surfaces
  slipWall                0  100    0   60    0    0     2
  slipWall                0  100    0   60    1    1     2
